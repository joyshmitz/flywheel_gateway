{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["bun"],
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "baseUrl": "../..",
    "paths": {
      "@flywheel/shared": ["packages/shared/src/index.ts"],
      "@flywheel/shared/*": ["packages/shared/src/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
